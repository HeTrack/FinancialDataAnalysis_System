                <nav id="sidebarMenu" class="d-md-block bg-light sidebar p-0 pr-4">
                    <div class="sidebar-sticky pt-3" style="height: calc(100vh - 61.6px);">
                        <ul class="nav flex-column">
                            <li class="nav-item mb-3">
                                <a class="text-decoration-none text-secondary px-4 py-1" asp-action="Index" asp-controller="Home" style="font-size: 18px;">
