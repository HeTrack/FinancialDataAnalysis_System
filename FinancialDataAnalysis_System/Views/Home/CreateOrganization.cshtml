        <div class="col-10">
            <main role="main">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Добавление Организации</h1>
                    <div class="btn-toolbar mb-2 mb-md-0"> </div>
                </div>
                <form asp-action="Add" class="organization-add" style="width: 75%;">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="INN"></label>
                            <input asp-for="INN" type="number" class="form-control" required>
                            <span asp-validation-for="INN" class="d-block text-danger text-center"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">&#64;</span>
                            </div>
                            <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Adress"></label>
                        <input asp-for="Adress" type="text" class="form-control" placeholder="1234 Main St" required>
                        <div class="invalid-feedback">Please enter your shipping address.</div>
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Добавить организацию</button>
                </form>
            </main>
        </div>
    </div>
</div>