                                        <path fill-rule="evenodd" d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022zM6 8.694 1 10.36V15h5V8.694zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5V15z"></path>
                                        <path d="M2 11h1v1H2v-1zm2 0h1v1H4v-1zm-2 2h1v1H2v-1zm2 0h1v1H4v-1zm4-4h1v1H8V9zm2 0h1v1h-1V9zm-2 2h1v1H8v-1zm2 0h1v1h-1v-1zm2-2h1v1h-1V9zm0 2h1v1h-1v-1zM8 7h1v1H8V7zm2 0h1v1h-1V7zm2 0h1v1h-1V7zM8 5h1v1H8V5zm2 0h1v1h-1V5zm2 0h1v1h-1V5zm0-2h1v1h-1V3z"></path>
                                    </svg>
                                    Организации
                                </a>
                            </li>
                            <li class="nav-item mb-3">
                                <a class="px-4 py-1 nav-link active" href="#" style="font-size: 18px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-clipboard-data" viewBox="0 0 16 16">
                                        <path d="M4 11a1 1 0 1 1 2 0v1a1 1 0 1 1-2 0v-1zm6-4a1 1 0 1 1 2 0v5a1 1 0 1 1-2 0V7zM7 9a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0V9z"></path>
                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"></path>
                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"></path>
                                    </svg>
                                    Модель Альтмана
                                </a>
                            </li>
                            <li class="nav-item mb-3">
                                <a class="text-decoration-none text-secondary px-4 py-1" asp-action="ParamAnalysis" asp-controller="Analysis" style="font-size: 18px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-journal-text" viewBox="0 0 16 16">
                                        <path d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"></path>
                                        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"></path>
                                        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"></path>
                                    </svg>
                                    Анализ
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-10">
                <main role="main" class="px-3 mx-3">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                        <h1 class="h2 col-10">Модель Альтмана</h1>
                        <div class="btn-toolbar mb-2 mb-md-0"> </div>
                    </div>
                     <h6 class="mb-3">Выберите год для получения финансовых показателей</h6>
               <form method="post" asp-action="ZAnalysis">
                <div class="input-group col-md-4 p-0">
                   <select asp-for="Date" class="form-control mr-2" id="ageselect" aria-label="Default select example">
                       <option>@Model.Date</option>
                   </select>
                   <input type="submit" class="btn btn-info" value="Cформировать"/>
                </div>
                </form>
                <script>
                  var selectElement = document.getElementById('ageselect');
                  for (var age = 1980; age <= 2100; age++) {
                      selectElement.add(new Option(age));
                  }
                  </script>
                    @{
                        if( Model.Date != null) {
                            if (Model.organizationFinances.Count() != 0)
                            {
                                <div class="table-responsive" style="margin-top: 30px;">
                                    <table class="table table-striped table-sm table-bordered text-center table-hover">
                                        <thead class="thead-dark">
                                            <tr>
                                                <th class="align-middle">Название</th>
                                                <th class="align-middle">Z-rate</th>
                                                <th class="align-middle">Зона распределения</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var organization in Model.organizationFinances)
                                            {
                                                <tr>
                                                    <td class="align-middle">@organization.Organization.Name</td>
                                                    <td class="align-middle">@organization.Zrate</td>
                                                    @{
                                                        if (organization.Zrate < 1.23)
                                                        {
                                                            <td class="align-middle">Зона риска</td>
                                                        }
                                                        else if (organization.Zrate > 2.9)
                                                        {
                                                            <td class="align-middle">Зона финансовой устойчивости</td>
                                                        }
                                                        else
                                                        {
                                                            <td class="align-middle">Зона неопределености</td>
                                                        }
                                                    }                                                                                                                         
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                 <h6 class="my-3">Не найдены финансовые показатели на данный период</h6>
                            }
                        }
                        }
                </main>
            </div>
        </div>
    </div>
</body>